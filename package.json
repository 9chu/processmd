{
  "name": "processto",
  "version": "1.0.1",
  "description": "Process a directory of markdown and yaml files to JSON files",
  "main": "index.js",
  "bin": {
    "processto": "./cli.js"
  },
  "scripts": {
    "prettier": "prettier --write --single-quote --trailing-comma --no-semi *.js",
    "start": "node cli.js \"test/data/input/**/*.{yml,md}\" --outputDir test/data/output",
    "back": "node cli.js \"test/data/output/**/*.json\" --convertMode source --outputDir test/data/back",
    "test": "jest"
  },
  "keywords": [
    "process",
    "markdown",
    "yaml",
    "json"
  ],
  "author": "Tim Scanlin",
  "license": "MIT",
  "dependencies": {
    "globby": "^6.1.0",
    "js-yaml": "^3.8.3",
    "marked": "^0.3.6",
    "mkdirp": "^0.5.1",
    "yargs": "^7.1.0"
  },
  "devDependencies": {
    "jest": "^19.0.2",
    "prettier": "^1.2.2"
  },
  "jest": {
    "verbose": true
  }
}
